{
  "name": "@bgpat/anchor-selector",
  "version": "0.3.2",
  "description": "The web-extension to select anchor element.",
  "scripts": {
    "start": "webpack -w",
    "build": "webpack",
    "test": "web-ext lint",
    "sign": "web-ext sign --api-key=$JWT_ISSUER --api-secret=$JWT_SECRET",
    "preversion": "dot-json manifest.json version $npm_package_version && git add manifest.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bgpat/anchor-selector.git"
  },
  "keywords": [
    "webextension",
    "firefox-addon"
  ],
  "author": "bgpat",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bgpat/anchor-selector/issues"
  },
  "homepage": "https://github.com/bgpat/anchor-selector#readme",
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/polyfill": "^7.4.3",
    "@babel/preset-env": "^7.6.0",
    "@bgpat/webext-webpack-plugin": "^0.1.2",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "babel-minify-webpack-plugin": "^0.3.1",
    "canvas": "^2.6.0",
    "color": "^3.1.2",
    "dot-json": "^1.1.0",
    "eslint": "^5.16.0",
    "eslint-loader": "^3.0.0",
    "husky": "^3.0.5",
    "lint-staged": "^8.1.5",
    "prettier": "^1.18.2",
    "sass-loader": "^7.1.0",
    "web-ext": "^3.1.1",
    "webextension-polyfill": "^0.4.0",
    "webpack": "^4.40.0",
    "webpack-cli": "^3.3.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
